<div class="w-full">
    <div class="w-full flex justify-end">
    <%= link_to 'Add Food', new_food_path, class: 'text-xl bg-blue-300 p-4' %>
    </div>
    <div class="flex justify-between items-center border border-black mt-8 p-0">
    <div class="flex flex-col justify-center items-center border-r border-black w-1/4 p-0 h-full">
    <h3 class="p-3 border-b border-black w-full text-center text-2xl font-bold">Food</h3>
    <ul>
    <% @foods.each do |food| %>
    <li class="text-xl font-semibold"><%= food.name %></li>
    <%end%>
    </ul>
    </div>
    <div class="flex flex-col justify-center items-center border-r border-black w-1/4 p-0 h-full"><h3 class="p-3 border-b border-black w-full text-center text-2xl font-bold">Measurement Unit</h3>
    <ul>
    <% @foods.each do |food| %>
    <li class="text-xl font-semibold"><%= food.measurement_unit %></li>
    <%end%>
    </ul></div>
    <div class="flex flex-col justify-center items-center border-r border-black w-1/4 p-0 h-full">
    <h3 class="p-3 border-b border-black w-full text-center text-2xl font-bold">Unit Price</h3>
    <ul>
    <% @foods.each do |food| %>
    <li class="text-xl font-semibold">$<%= food.price %></li>
    <%end%>
    </ul></div>
    <div class="flex flex-col justify-center items-center w-1/4 p-0 h-full">
    <h3 class="p-3 border-b border-black w-full text-center text-2xl font-bold">Action</h3>
    <%@foods.each do |food| %>
    <% if can? :destroy, food %>
    <%= button_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500" %>
    <%end%>
    <%end%>
    </div>
    </div>
    </div>
