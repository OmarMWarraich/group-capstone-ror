
<div>
  <h1>Recipes</h1>
  <ul>
  <li>
    <% @recipes.each do |recipe| %>
        <% if recipe.user_id == current_user.id %>
          <%= link_to recipe_path(recipe.id) do %>            
              <div>
                <%= recipe.name %>
              </div>
              <div>
                <%= recipe.description %>
              </div>
          <% end %>
          <div>
            <%= button_to 'Remove', recipe, method: :delete %>
          </div>
        <% end %>
        <% end %>
        </li>
  </ul>
</div>










