<div class='w-full'>
  <h1 class="font-bold text-3xl text-center">Public Recipes</h1>
  <% @public_recipes.each do |public_recipe| %> 
    <div class='border border-black w-full'>
      <%= link_to recipe_path(@recipe.id) do %>
        <div>
          <div class=''>
            <%= public_recipe.name %>
          </div>
        </div>
        <div class=''>
          <%= public_recipe.user.name %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
